{
    // Font
    "editor.fontFamily": "'Iosevka Nerd Font'",
    "debug.console.fontFamily": "Iosevka Nerd Font",
    "editor.fontSize": 19,
    // Theming
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.productIconTheme": "material-product-icons",
    // Minimal
    "workbench.editor.showTabs": "single",
    "editor.minimap.enabled": false,
    "workbench.editor.showIcons": false,
    "window.titleBarStyle": "custom",
    // Terminal
    "terminal.external.linuxExec": "alacritty",
    // Generic
    "editor.formatOnSave": true,
    // Jupyter
    "jupyter.kernels.trusted": [
        "~/.local/python/bin"
    ],
    "python.defaultInterpreterPath": "~/.local/python/bin",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "notebook.globalToolbar": false,
    "notebook.formatOnSave.enabled": true,
    "notebook.consolidatedOutputButton": false,
    "notebook.showFoldingControls": "always",
    "notebook.stickyScroll.enabled": true,
    "jupyter.themeMatplotlibPlots": false,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.neovimExecutablePaths.linux": "/home/marcos/.local/share/bob/nvim-bin/nvim",
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.statusBar.visible": false,
    "workbench.activityBar.location": "hidden",
    "breadcrumbs.enabled": false,
    "notebook.lineNumbers": "on",
    "notebook.markup.fontSize": 20,
}